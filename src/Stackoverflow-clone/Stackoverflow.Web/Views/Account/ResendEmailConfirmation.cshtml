@model EmailConfirmationModel
@{
    ViewData["Title"] = "Email Confirmation";
}
  
<div class="row">
    <div class="col-md-4">
        <form id="registerForm" id="UpdateForm" asp-controller="Account" asp-action="ResendEmailConfirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post" asp-antiforgery="true">
            <h2>Resend Email Confirmation</h2>
            <hr />
            <input type="hidden" asp-for="@Model.Captcha" id="captchaInput" />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Email">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
             
            <button id="EmailConfirmationSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_CaptchaScriptsPartial" />
}